#!/bin/sh

# Prints the current volume or 婢 if muted.

[ $(pamixer --get-mute) = true ] && echo "ﱝ MUTED " && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="墳"
elif [ "$vol" -gt "30" ]; then
	icon="奔"
elif [ "$vol" -gt "0" ]; then
	icon="奄"
else
        echo "婢 0 " && exit
fi

echo "$icon $vol% "
